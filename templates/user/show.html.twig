{% extends 'back.base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div style="width:800px; margin:0 auto;">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>userphone</th>
                <td>{{ user.userphone }}</td>
            </tr>
            <tr>
                <th>useraddress</th>
                <td>{{ user.useraddress }}</td>
            </tr>
            <tr>
                <th>usercin</th>
                <td>{{ user.usercin }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>


    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
