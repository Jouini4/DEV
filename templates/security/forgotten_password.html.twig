{% extends 'front.base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
        <section class="breadcrumb-section set-bg" data-setbg="img/1.jpg">
                <div class="container">
                        <div class="row">
                                <div class="col-lg-12 text-center">
                                        <div class="breadcrumb__text">
                                                <h2 style="color:#9cfda4" ;>Mot de passe oublié</h2>
                                        </div>
                                </div>
                        </div>
                </div>

        </section>

        {% form_theme emailForm'bootstrap_3_layout.html.twig' %}
        <center>
        {{ form_start(emailForm,{'attr':{'novalidate' : 'novalidate'}}) }}
        {{ form_errors(emailForm) }}
        <div class="form-group">
                {{ form_label(emailForm.email,'Email') }}
                {{ form_widget(emailForm.email) }}
        </div>
        <button class="btn btn-lg btn-primary" type="submit">
                Envoyer
        </button>

        {{ form_end(emailForm) }}
        </center>
{% endblock %}