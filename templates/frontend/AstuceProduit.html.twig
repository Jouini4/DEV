{% extends 'front.base.html.twig' %}

    {% block body %}

        <section class="breadcrumb-section set-bg" data-setbg="img/1.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="breadcrumb__text">
                            <h2 style="color:#9cfda4" ;>ASTUCES</h2>
                        </div>
                    </div>
                </div>
            </div>

        </section>

<div style="width:800px; margin:0 auto;">

        <table class="table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for astuce in astuces %}
                <tr>
                    <td><img style="margin-bottom: -18px" src="{{ asset('uploads/' ~ astuce.image) }}" width="700" height="300"></td>
                    <td>{{ astuce.titre }}</td>
                    <td>{{ astuce.description }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

</div>

{% endblock %}

