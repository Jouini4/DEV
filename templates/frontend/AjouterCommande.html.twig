                            <!--      <div class="checkout__order__subtotal">Subtotal <span>$750.99</span></div> -->
                            <div class="checkout__order__total">Total <span>{{ produit.Prix }}</span></div>
                            <div class="checkout__input__checkbox">

                            </div>

                            {{ form_row(form.Payez,{'attr': {'class': 'site-btn' } }) }}



