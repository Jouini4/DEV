                                <div class="checkout__input">
                                    <p>Nom<span></span></p>
                                    <input id="nom" name="nom" type="text" value= {{ client.nom }} readonly>

                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">

                                    {{ form_row(form.adresse,{'attr': {'class': 'form-control','value':client.adresse } }) }}
                        </div>
                        <div class="checkout__input">
