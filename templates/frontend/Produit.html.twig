{% extends 'front.base.html.twig' %}


{% block body %}


    <section class="breadcrumb-section set-bg" data-setbg="img/1.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2 style="color:#9cfda4" ;>Produits</h2>
                    </div>
                </div>
            </div>
        </div>

    </section>
<br>
<div style="width:900px; margin:0 auto;">
<section class="hero">

    <div class="container">

        <div class="col-lg-9">
            <div class="hero__search">
                <div class="hero__search__form">
                    <form action="#">
                        <div class="hero__search__categories">
                            All Categories
                            <span class="arrow_carrot-down"></span>
                          </div>
                        <input type="text" placeholder="Rechercher">
                        <button type="submit" class="site-btn">RECHERCHER</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
</div>


<div style="width:1000px; margin:0 auto;">
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Tous les produits</span>
                        </div>
                        <ul>
                            <li><a href="#">Les huiles</a></li>
                            <li><a href="#">Les savons</a></li>
                            <li><a href="#">Les cr√®mes</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>


<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6">
        {% for produit in produits  | slice(0,3) %}
        <div class="product__item">
            <div class="product__item__pic set-bg" ><a href="{{ path('afficherDescription',{'id': produit.id}) }}">
                    <img src="{{ asset('uploads/' ~ produit.image~'') }}"width="380" height="350" >
                </a>
                <ul class="product__item__pic__hover">
                    <li><a class="buy" href="{{ path('ajouterPanier', {'id': produit.id}) }}"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="product__item__text">
                <h4>{{ produit.NomProduit }}</h4>
                <h5><p class="price with-discount">{{ produit.Prix }} DT </p></h5>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="col-lg-4 col-md-6 col-sm-6">
        {% for produit in produits  | slice(3,3) %}
            <div class="product__item">
                <div class="product__item__pic set-bg" ><a href="{{ path('afficherDescription',{'id': produit.id}) }}">
                        <img src="{{ asset('uploads/' ~ produit.image~'') }}"width="380" height="350" >
                    </a>
                    <ul class="product__item__pic__hover">
                        <li><a class="buy" href="{{ path('ajouterPanier', {'id': produit.id}) }}"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h4>{{ produit.NomProduit }}</h4>
                    <h5><p class="price with-discount">{{ produit.Prix }} DT </p></h5>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="col-lg-4 col-md-6 col-sm-6">
        {% for produit in produits  | slice(6,3) %}
            <div class="product__item">
                <div class="product__item__pic set-bg" ><a href="{{ path('afficherDescription',{'id': produit.id}) }}">
                        <img src="{{ asset('uploads/' ~ produit.image~'') }}"width="380" height="350" >
                        </a>


                    <ul class="product__item__pic__hover">
                        <li><a class="buy" href="{{ path('ajouterPanier', {'id': produit.id}) }}"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h4>{{ produit.NomProduit }}</h4>
                    <h5><p class="price with-discount">{{ produit.Prix }} DT </p></h5>
                </div>
            </div>
        {% endfor %}
    </div>

</div>


<div class="mt-4">

        {{ knp_pagination_render(produits) }}

</div>
{% endblock %}


