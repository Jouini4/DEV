{% extends 'back.base.html.twig' %}
{% block body %}
<div style="width:1000px; margin:0 auto;">
    <table border="1"width="50%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom_Produit</th>
            <th>Categorie</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Image</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
        <tr>
            <td>{{ produit.id }}</td>
            <td>{{ produit.NomProduit }}</td>
            <td>{{ produit.Categorie }}</td>
            <td>{{ produit.Description }}</td>
            <td>{{ produit.Prix }}</td>
            <td><img src ="{{ asset('img/product/' ~ produit.image) }}"
                     alt =""  width="100" height="100">
            </td>
            <td><a href="{{path("supprimerProduit",{'id':produit.id})}}">Supprimer</a>
            </td>
            <td><a href="{{path("modifierProduit",{'id':produit.id})}}">Modifier</a>
            </td>

            {% endfor %}
    </table>

    <a href="{{ path('ajouterProduit') }}">Cr√©er un nouveau produit</a>
</div>
{% endblock %}

